<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.HomeActivity"
    android:padding="0dp">

    <!-- Contenedor principal: Logo y mensaje de bienvenida -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_dark_background"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="36dp"
        android:layout_marginBottom="20dp">

        <!-- Logo del restaurante -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardBackgroundColor="@color/GrayLight"
            app:cardCornerRadius="55dp"
            android:layout_marginBottom="16dp">
            <!-- Aquí puedes poner el contenido del logo -->
        </com.google.android.material.card.MaterialCardView>

        <!-- Nombre del negocio -->
        <TextView
            android:id="@+id/txtTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="PUPUSERIA JENNY"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginBottom="8dp"/>

        <!-- Mensaje de Bienvenida -->
        <TextView
            android:id="@+id/txtMensaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Bienvenida/o"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>

    <!-- Contenedor de Menú y botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <!-- Menú -->
        <TextView
            android:id="@+id/txtMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menú"
            android:textSize="45sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="30dp"/>

        <!-- Cuadrícula de botones -->
        <GridLayout
            android:id="@+id/gridLayoutCategorias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:orientation="horizontal"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"

            android:layout_gravity="center">

            <!-- Aquí se agregarán dinámicamente los botones de categorías -->
        </GridLayout>
    </LinearLayout>

    <!-- RecyclerView para mostrar categorías -->
    <TextView
        android:id="@+id/txtCategorias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Categorías"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"/>


</LinearLayout>
